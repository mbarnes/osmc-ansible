[Unit]
Description=Bazarr (container)
Requires=nzbget.service
After=nzbget.service

[Service]
Restart=always
RestartSec=30

ExecStart=/usr/bin/docker run --rm \
                              --name=bazarr \
                              --memory={{ bazarr_memory_limit }} \
                              --publish={{ bazarr_host_port }}:6767 \
                              --volume={{ bazarr_config_dir }}:/config \
                              --volume={{ storage_path }}:{{ storage_path }} \
                              --env=PUID={{ ansible_user_uid }} \
                              --env=PGID={{ ansible_user_gid }} \
                              --env=TZ={{ tz_name }} \
                              {{ bazarr_image_name }}

ExecStop=/usr/bin/docker stop bazarr

[Install]
WantedBy=multi-user.target

[Unit]
Description=RSS-Bridge (container)
Requires=docker.service
After=docker.service

[Service]
Restart=always
RestartSec=30

ExecStart=/usr/bin/docker run --rm \
                              --name=rss-bridge \
                              --publish={{ rss_bridge_host_port }}:80 \
                              --volume={{ rss_bridge_whitelist }}:/app/whitelist.txt \
                              {{ rss_bridge_image_name }}

ExecStop=/usr/bin/docker stop rss-bridge

[Install]
WantedBy=multi-user.target

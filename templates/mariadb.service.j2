[Unit]
Description=MariaDB (container)
Requires=docker.service
After=docker.service

[Service]
Restart=always
RestartSec=30

ExecStart=/usr/bin/docker run --rm \
                              --name=mariadb \
                              --memory={{ mariadb_memory_limit }} \
                              --publish={{ mariadb_host_port }}:3306 \
                              --volume={{ mariadb_config_dir }}:/config \
                              --env=PUID={{ osmc_user_uid }} \
                              --env=PGID={{ osmc_user_gid }} \
                              --env=TZ={{ tz_name }} \
                              {{ mariadb_image_name }}

ExecStop=/usr/bin/docker stop mariadb

[Install]
WantedBy=multi-user.target
